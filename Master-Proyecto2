/* USER CODE BEGIN 4 */
void transmit_uart(char *string)
{
  HAL_UART_Transmit(&huart2, (uint8_t*) string, strlen(string), HAL_MAX_DELAY);
}

char receive_uart_char(void)
{
	uint8_t ch;
	do {
		HAL_UART_Receive(&huart2, &ch, 1, HAL_MAX_DELAY);
	} while (ch == '\r' || ch == '\n');
	return (char)ch;
}

void mostrar_menu(void)
{
  transmit_uart("\r\n------ MENU PRINCIPAL ------\r\n");
  transmit_uart("Selecciona una opcion: \r\n");
  transmit_uart("1. Controlar dispositivo SPI\r\n");
  transmit_uart("2. Obtener medicion de sensor I2C\r\n");
}

void spi_send_command(void)
{
    char comando[32] = {0};
    uint8_t index = 0;
    char c;

    transmit_uart("\r\n--- CONTROL SPI ---\r\n");
    transmit_uart("Ingrese un comando con formato LED,Tiempo: ");

    while (1)
    {
        HAL_UART_Receive(&huart2, (uint8_t*)&c, 1, HAL_MAX_DELAY);
        if (c == '\r' || c == '\n') {
            comando[index] = '\0';
            transmit_uart("\r\n");
            break;
        }
        else if ((c >= '0' && c <= '9') || c == ',') {
            HAL_UART_Transmit(&huart2, (uint8_t*)&c, 1, HAL_MAX_DELAY);
            if (index < sizeof(comando) - 1) comando[index++] = c;
        }
    }

    if (strlen(comando) == 0) {
        transmit_uart("Comando vacío\r\n");
        return;
    }

    sprintf(buffer, "Comando enviado correctamente: '%s'\r\n", comando);
    transmit_uart(buffer);

    // SPI comunicación
    HAL_GPIO_WritePin(GPIOB, GPIO_PIN_6, GPIO_PIN_RESET);
    HAL_Delay(1);

    memset(tx_buf, 0, sizeof(tx_buf));
    memset(rx_buf, 0, sizeof(rx_buf));
    strcpy((char*)tx_buf, comando);

    HAL_StatusTypeDef status = HAL_SPI_TransmitReceive(&hspi1, tx_buf, rx_buf, strlen((char*)tx_buf), 2000);

    HAL_GPIO_WritePin(GPIOB, GPIO_PIN_6, GPIO_PIN_SET);
    HAL_Delay(5);

    if (status == HAL_OK) {
        sprintf(buffer, "Respuesta SPI: '%s'\r\n", rx_buf);
        transmit_uart(buffer);
    } else {
        sprintf(buffer, "Error SPI: %d\r\n", status);
        transmit_uart(buffer);
    }

    transmit_uart("Regresando al menu principal...\r\n");
}

void spi_check_connection(void)
{
    // Verificación silenciosa de conexión
    memset(tx_buf, 0, sizeof(tx_buf));
    memset(rx_buf, 0, sizeof(rx_buf));
    strcpy((char*)tx_buf, "PING");

    HAL_GPIO_WritePin(GPIOB, GPIO_PIN_6, GPIO_PIN_RESET);
    HAL_Delay(2);

    HAL_SPI_TransmitReceive(&hspi1, tx_buf, rx_buf, 5, 500);

    HAL_GPIO_WritePin(GPIOB, GPIO_PIN_6, GPIO_PIN_SET);
    HAL_Delay(5);
}

void i2c_read_sensor(void)
{
    transmit_uart("\r\n--- MEDICION I2C ---\r\n");
    transmit_uart("Leyendo sensor I2C...\r\n");

    uint8_t data[2] = {0};
    HAL_StatusTypeDef status;
    uint8_t intento;

    // Intentar lectura hasta 3 veces si hay datos corruptos
    for(intento = 0; intento < 3; intento++) {
        status = HAL_I2C_Master_Receive(&hi2c1, deviceAddress << 1, data, 2, 1000);

        if (status == HAL_OK && data[0] != 0xFF && data[1] != 0xFF &&
            data[0] != 0x00 && data[1] != 0x00) {
            break; // Lectura válida
        }
        HAL_Delay(5);
    }

    if (status == HAL_OK) {

        uint16_t pot_value = (data[1] << 8) | data[0];
        uint16_t voltage_mv = (pot_value * 3300) / 4095;
        uint8_t pot_8bit = (pot_value * 255) / 4095;

        sprintf(buffer, "Valor del potenciometro:\r\n");
        transmit_uart(buffer);

        sprintf(buffer, "  - Valor analogico: %d\r\n", pot_8bit);
        transmit_uart(buffer);
        sprintf(buffer, "  - Voltaje: %d.%02d V\r\n", voltage_mv / 1000, voltage_mv % 1000 / 10);
        transmit_uart(buffer);
    } else {
        transmit_uart("Error: No se pudo leer el sensor\r\n");
    }

    transmit_uart("Medicion completada correctamente.\r\n");
}
